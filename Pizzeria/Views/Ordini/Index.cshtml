@model IEnumerable<Pizzeria.Models.Ordini>

@{
    ViewBag.Title = "Lista Ordini";
}

<h2 class="text-center m-4">Ordini</h2>

<table class="table ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome e Cognome</th>
            <th>Data Ordine</th>
            <th>Indirizzo Spedizione</th>
            <th>Note</th>
            <th>Stato</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ordine in Model)
        {
            <tr>
                <td>@ordine.ID</td>
                <td>@ordine.Utenti.Nome</td>
                <td>@ordine.DataOrdine</td>
                <td>@ordine.IndirizzoSpedizione</td>
                <td>@ordine.Note</td>
                <td>@ordine.Stato</td>
                <td>
                    @Html.ActionLink("Modifica", "Edit", new { id = ordine.ID }, new { @class = "btn btn-warning" })
                </td>
            </tr>
        }
    </tbody>
</table>
